<%- include partials/header.ejs %>
<%- include partials/main_nav.ejs %>


<main class="container">
<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <h1><%= title  %> </h1>
        <a href="/list/add" class="btn btn-primary" role="button">Add user</a>
       
        <br>
           <table class="table table-bordered table-striped table-hover">

            <!--Header Row-->
            <tr>
                <th class="text-center">Username </th>
                <th class="text-center">Password </th>
                <th class="text-center">Email Address </th>
                <th class="text-center">Edit </th>
                <th class="text-center">Delete </th>
            </tr>
            <!--Repeatable Template Rom-->
            <% for(let count = 0; count < data.length; count++) { %>
            <tr>
                <td class="text-center"><%= data[count].username %> </td>
                <td class="text-center"><%= data[count].password %></td>
                <td class="text-center"><%= data[count].emailaddress %></td>
                <td><a href='/list/edit/<%= data[count].id %>' class="btn btn-warning" role="button">Update</a></td>
                <td><a href='/list/delete/<%= data[count].id %>' class="btn btn-danger" role="button">Delete</a></td>
            </tr>
            <% } %>
            </table>
            </div>
        </div>
</main>

<%- include partials/bottom_nav.ejs %>
<%- include partials/footer.ejs %>